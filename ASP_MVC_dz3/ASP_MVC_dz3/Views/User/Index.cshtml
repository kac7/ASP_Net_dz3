@using ASP_MVC_dz3.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link href="~/style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="nav">
            @Html.ActionLink("Add new User", "Create", new { }, new { @class = "btn btn-success" })
            <a href="/Role/Index" class="btn btn-primary">Show the Role</a>
        </div>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Login</th>
                <th>Password</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            @foreach (var item in UserRepository.Instanse._user)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Login</td>
                    <td>@item.Password</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Role.Name</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { item.Id }, new { @class = "btn btn-secondary" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { item.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
