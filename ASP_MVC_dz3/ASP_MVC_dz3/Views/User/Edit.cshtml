@using ASP_MVC_dz3.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link href="~/style.css" rel="stylesheet" />
</head>
<body>
    <div class="myTable">
        <h2>Edit User @ViewBag.newUser.Login</h2>
        @using (Html.BeginForm())
        {
        <table class="table">
            <tr>
                <td><label for="FirstName">Firs tName</label></td>
                <td><input type="text" required name="FirstName" id="FirstName" value="@ViewBag.newUser.FirstName" /></td>
            </tr>
            <tr>
                <td><label for="LastName">Last Name</label></td>
                <td><input type="text" required name="LastName" id="LastName" value="@ViewBag.newUser.LastName" /></td>
            </tr>
            <tr>
                <td><label for="Login">Login</label></td>
                <td><input type="text" required name="Login" id="Login" value="@ViewBag.newUser.Login" /></td>
            </tr>
            <tr>
                <td><label for="Password">Password</label></td>
                <td><input type="text" required name="Password" id="Password" value="@ViewBag.newUser.Password" /></td>
            </tr>
            <tr>
                <td><label for="Email">Email</label></td>
                <td><input type="email" required name="Email" id="Email" value="@ViewBag.newUser.Email" /></td>
            </tr>
            <tr>
                <td><label for="Phone">Phone</label></td>
                <td><input type="text" required name="Phone" id="Phone" value="@ViewBag.newUser.Phone" /></td>
            </tr>
            <tr>
                <td><label for="Role">Role</label></td>
                <td>
                    <select name="Role" id="Role">
                        @foreach (var item in RoleRepository.Instanse._role)
                        {
                            if (item.Name == ViewBag.newUser.Role.Name)
                            {
                                <option selected value="@item.Name">@item.Name</option>
                                continue;
                            }
                            <option value="@item.Name">@item.Name</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
        <div class="footer">
            <input type="submit" class="btn btn-success" value="Edit" />
            @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-danger" })
        </div>
        }
    </div>
</body>
</html>
